<div class="card-body">
  <div class="row">
    <div class="col col-md-2 col-lg-3">
      {{-report/metrics-chart/metric-selector
        selected=selectedMetric
        options=metricOptions
        disabled=isLoading
        onchange=(action "setMetric")
      }}
    </div>
    <div class="col col-12 col-md-6">
      {{-report/metrics-chart/summary
        options=metricOptions
        rows=rows
        class="text-center"
      }}
    </div>
    <div class="col col-md-4 col-lg-3">
      {{-report/metrics-chart/date-selector
        class="float-right"
        disabled=isLoading
        range=(hash start=startDate end=endDate)
        onchange=(action "setDates")
      }}
    </div>
  </div>
</div>
{{progress-bar show=isLoading}}
<div class="card-body">
  <div class="row mt-3">
    <div class="col">
      {{-report/metrics-chart/chart
        label=selectedMetric.label
        isLoading=isLoading
        days=days
        data=data
        tooltipFormat=selectedMetric.tooltipFormat
        labelFormat=selectedMetric.labelFormat
      }}
    </div>
  </div>
</div>
