{{#bs-modal show=true size="large" onHidden=(route-action "transitionTo" "manage.campaign.edit.email-line-items") as |modal|}}
  {{#modal.header}}
    <h5 class="modal-title">Create Email Line Item</h5>
    <button {{action modal.actions.hide}} type="button" class="close" aria-label="Close">
      {{entypo-icon "cross"}}
    </button>
  {{/modal.header}}
  {{progress-bar show=isActionRunning}}
  {{#model-form
    model=model
    shouldAutosave=false
    onSubmit=(action "create") as |form|
  }}
    {{#modal.body}}
      {{partial "manage/campaign/edit/email-line-items/form"}}
    {{/modal.body}}

    {{#modal.footer}}
      {{model-save-button disabled=isActionRunning}}
    {{/modal.footer}}
  {{/model-form}}

{{/bs-modal}}
